<header class="bg-green-800 text-white p-4 flex items-center justify-between">
  <div class="ml-5">
    <img src="/images/logo.png" alt="Mr. Billy Logo" class="h-16">
  </div>
  <nav class="mr-5">
    <a href="/logout" class="text-white text-lg hover:text-red-600 transition duration-300">Logout</a>
    <a href="/profile/edit" class="ml-3 text-white text-lg hover:text-blue-500 transition duration-300">Edit Profile</a>
    <a href="#" id="takeOrderLink" class="ml-3 text-white text-lg hover:text-blue-500 transition duration-300">Take Order</a>

    <script>
      // Function to generate the unique order ID
      function generateOrderId() {
        const prefix = "ORD";
        const timestamp = Date.now(); // Use timestamp to ensure uniqueness
        const randomPart = Math.floor(1000 + Math.random() * 9000); // 4-digit random number
        return `${prefix}${timestamp}${randomPart}`;
      }

      // Select the Take Order link
      const takeOrderLink = document.getElementById('takeOrderLink');

      // Generate a random Order ID
      const randomOrderId = generateOrderId();

      // Dynamically update the link href to include the generated Order ID
      takeOrderLink.href = `/order/take/${randomOrderId}`;
    </script>
  </nav>
</header>
