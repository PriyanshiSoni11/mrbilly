<script>
    // Function to generate a unique Order ID
    function generateOrderId() {
        const prefix = "ORD";
        const timestamp = Date.now(); // Use timestamp to ensure uniqueness
        const randomPart = Math.floor(1000 + Math.random() * 9000); // 4-digit random number
        return `${prefix}${timestamp}${randomPart}`;
    }

    // Dynamically set the URL for the New Order button
    function setOrderButtonUrl() {
        const newOrderButton = document.getElementById("newOrderButton");
        if (newOrderButton) {
            const orderId = generateOrderId();
            newOrderButton.href = `/order/take/${orderId}`;
        } else {
            console.warn("New Order button not found.");
        }
    }

    // Set the button URL when the page loads
    window.addEventListener('load', setOrderButtonUrl);
</script>
